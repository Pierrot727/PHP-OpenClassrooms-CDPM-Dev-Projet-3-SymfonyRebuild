{% extends 'gabaritAdmin.html.twig' %}

{% block body %}
            <div class="row placeholders">
                        <div id="contenu">
                            <h2>Tableau de bord</h2>
                            Bienvenue, {{ user.firstname }} !
                            Ce blog comporte {{ billets|length }} billet(s)
                            et X
                            commentaire(s) et X signalements
                            <hr>
                        </div>
                    </div>
                </div>
                <div class="col-md-10 col-lg-offset-2 ">

                    <div class="panel panel-default">
                        <div class="panel-heading"><h4>Votre profil</h4></div>
                        <div class="panel-body">

                            <div class="box box-info">

                                <div class="box-body">
                                    <div class="col-sm-4">
                                        {% if user.picture is not null %}
                                        <div align="center"><img alt="User Pic"
                                                                 src="{{ asset('images/uploads/'~user.picture) }}"
                                                                 id="profile-image1" class="img-circle img-responsive">
                                        </div>
                                        {% else %}
                                        <div align="center"><img alt="User Pic"
                                                                 src="{{ asset('/images/no_picture.jpg') }}"
                                                                 id="profile-image1" class="img-circle img-responsive">
                                        </div>
                                        {% endif %}
                                        <form action="" method="post" id="profile-form-upload" class="hidden" enctype="multipart/form-data" >
                                            <input name="file" id="profile-image-upload" type="file">
                                        </form>

                                        <div style="color:#999;">Cliquez içi pour changer l'image de profil</div>
                                    </div>
                                    <br>
                                    <!-- /input-group -->
                                </div>

                                <div class="col-sm-6">
                                    <h4 style="color:#00b1b1;">
                                        {{ user.username }}
                                    </h4>
                                    </span>
                                    <span>
                                    {% if is_granted('ROLE_USER') %}<p> Droits utilisateur</p> {% endif %}
                                    {% if is_granted('ROLE_MODO') %}<p> Droits modérateur</p> {% endif %}
                                    {% if is_granted('ROLE_ADMIN') %}<p> Droits administrateur</p> {% endif %}

                                </span>
                                    {% if user.roles == "Banni" %}
                                    <span>
                                    </br>
                                        </br>
                                        <div class="alert alert-danger">
                                        <strong>Attention !</strong> Vous êtes banni, contactez un administrateur !
                                    </div>
                                        </p>
                                </span>
                                    {% endif %}
                                </div>
                                <div class="clearfix"></div>
                                <hr style="margin:5px 0 5px 0;">

                                <div class="col-sm-5 col-xs-6 tital ">Nom:</div>
                                <div class="col-sm-7 col-xs-6 ">{{ user.name }}</div>
                                <div class="clearfix"></div>
                                <div class="bot-border"></div>

                                <div class="col-sm-5 col-xs-6 tital ">Prénom:</div>
                                <div class="col-sm-7">{{ user.firstname }}</div>
                                <div class="clearfix"></div>
                                <div class="bot-border"></div>

                                <div class="col-sm-5 col-xs-6 tital ">Identifiant :</div>
                                <div class="col-sm-7">{{ user.username }}</div>
                                <div class="clearfix"></div>
                                <div class="bot-border"></div>

                                <div class="col-sm-5 col-xs-6 tital ">Date de naissance :</div>
                                <div class="col-sm-7">{{ user.birthdate|date() }}</div>

                                <div class="clearfix"></div>
                                <div class="bot-border"></div>

                                <!-- /.box-body -->
                            </div>
                            <!-- /.box -->

                        </div>


                    </div>
                </div>
            </div>
    </div>
{% endblock %}